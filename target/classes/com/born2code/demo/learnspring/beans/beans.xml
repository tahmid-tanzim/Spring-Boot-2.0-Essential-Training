<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	default-init-method="init" default-destroy-method="destroy"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:c="http://www.springframework.org/schema/c"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="patient" class="com.born2code.demo.learnspring.Patient"
		scope="singleton" init-method="onCreate" destroy-method="onDestroy"
		factory-method="getInstance" p:address-ref="address" c:id="9" c:name="Yellow">
		<property name="nationalId" value="12345"></property>
	</bean>

	<bean id="patient2" class="com.born2code.demo.learnspring.Patient"
		scope="singleton" init-method="onCreate" destroy-method="onDestroy"
		factory-method="createPatient" factory-bean="patientfactory">
		<constructor-arg value="16" name="id"></constructor-arg>
		<constructor-arg value="Fatiha" name="name"></constructor-arg>
		<property name="nationalId" value="12345"></property>
		<property name="address" ref="address"></property>
	</bean>

	<bean id="address" class="com.born2code.demo.learnspring.Address">
		<constructor-arg name="street" value="Dhanmondi"></constructor-arg>
		<constructor-arg name="postcode" value="1235"></constructor-arg>
	</bean>

	<bean id="address2" class="com.born2code.demo.learnspring.Address" p:street="Green Road" p:postcode="1059"></bean>
	
	<bean class="com.born2code.demo.learnspring.PatientFactory"
		id="patientfactory">
	</bean>
</beans>
